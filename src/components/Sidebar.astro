<div class="sidebar">
  <slot />
</div>

<style is:global>
  .sidebar {
    @apply p-3 hidden lg:block;
  }

  .sidebar ul {
    @apply p-0 list-none;
  }

  .sidebar h2 {
    @apply mx-2 text-xs text-gray-500 dark:text-gray-400 font-medium leading-tight mb-2 underline;
  }

  .sidebar-link {
    @apply block pb-2.5;
    @apply text-xs leading-tight text-gray-500 hover:font-medium dark:text-gray-400 dark:hover:text-gray-50 no-underline;
    overflow-wrap: anywhere;
  }

  .sidebar-link[aria-current='true'],
  .sidebar-link[aria-current='true']:hover,
  .sidebar-link[aria-current='true']:focus {
    @apply text-gray-700 dark:text-gray-50 underline font-medium;
  }
</style>
