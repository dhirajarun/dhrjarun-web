---
import clsx from "clsx";
const { class: className, ...rest } = Astro.props;
---

<div class={clsx(className, "three-col-layout")} {...rest}>
  <slot />
</div>

<style is:global>
  .three-col-layout {
    display: grid;
    min-height: 100vh;
    grid-template-columns: 1fr minmax(16ch, 116ch) 1fr;
    grid-template-rows: auto;
    grid-template-areas: "left center right";
    align-items: start;
  }
  .three-col-layout > .left {
    grid-area: left;
  }
  .three-col-layout > .right {
    grid-area: right;
  }
  .three-col-layout > .center {
    grid-area: center;
    padding-inline: 16px;
  }
</style>
